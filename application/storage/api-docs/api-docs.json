{
    "openapi": "3.0.0",
    "info": {
        "title": "Dictiocod API",
        "description": "API de dicionário!",
        "version": "1.0"
    },
    "paths": {
        "/user/me": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Obter perfil.",
                "description": "Retorna as informações do usuário.",
                "operationId": "421f19323457d46c5f90d60e67b02884",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "description": "O ID do usuário.",
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "name": {
                                            "description": "Nome do usuário.",
                                            "type": "string",
                                            "example": "Pedro Silva"
                                        },
                                        "email": {
                                            "description": "O endereço de email do usuário.",
                                            "type": "string",
                                            "example": "pedrosilva@example.com"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/me/history": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Obter histórico de palavras visitadas",
                "description": "Retorna a lista de palavras que o usuário já visualizou no dicionário.",
                "operationId": "51af282c4388a19690bf544533d0a2bd",
                "parameters": [
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Número máximo de registros a serem retornados. Padrão é 10.",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 10
                        }
                    },
                    {
                        "name": "cursor",
                        "in": "query",
                        "description": "Código para paginação baseada em cursores.",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "eyJpZCI6MTIzfQ=="
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de palavras do histórico.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "results": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "word": {
                                                        "type": "string",
                                                        "example": "fire"
                                                    },
                                                    "viewed_at": {
                                                        "type": "string",
                                                        "format": "date-time",
                                                        "example": "2024-12-01T15:30:00Z"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "totalDocs": {
                                            "type": "integer",
                                            "example": 50
                                        },
                                        "next": {
                                            "type": "string",
                                            "example": "eyJpZCI6MTIzfQ=="
                                        },
                                        "hasNext": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "hasPrev": {
                                            "type": "boolean",
                                            "example": false
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "User",
            "description": "User"
        }
    ]
}